package sheet4Arrays;

public class Ex7LargestAndSmallest {

	public static void main(String[] args) {

		int [] nums = {};
		Ex7LargestAndSmallest ex7 = new Ex7LargestAndSmallest();
		ex7.printLargestAndSmallest(nums);

	}

	public void printLargestAndSmallest(int [] nums) {
		/* If the array doesn't contain any elements, i.e. the 
		 * length is 0, tell the user. Otherwise get the largest
		 * and smallest elements. */
		if (nums.length == 0) {
			System.out.println("Please pass in a non-empty array");
		} else {

			int largest = nums[0];  // 2 6 10 14

			for (int n : nums) {  //  n = 12  
				if (n > largest)
					largest = n;
			}	
			
			int smallest = nums[0];
			for (int n: nums) {
				if (n < smallest)
					smallest = n;
			}

			System.out.printf("The largest is %d and the smallest "
					+ "is %d.", largest, smallest);
		}

	}

}
